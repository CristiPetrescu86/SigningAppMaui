<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SigningApp.PopupPages.PINPopup"
             Color="#F5F6F6"
             Size="350,500">

    <StackLayout Margin="20,20,20,40" Orientation="Vertical">
        <Entry x:Name="pinEntry" Keyboard="Default" Placeholder="Introduceti PIN"/>
        <Button Text="Close" VerticalOptions="EndAndExpand" Clicked="Close_Button"/>
    </StackLayout>
    
</xct:Popup>